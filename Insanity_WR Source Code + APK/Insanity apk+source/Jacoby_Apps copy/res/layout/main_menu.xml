<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" 
       android:fillViewport="true"
       android:layout_width="fill_parent"
        android:layout_height="fill_parent">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
       
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:background="#D8E0CE" >

        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:id="@+id/relativeLayout2"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true" >

            <TextView
                android:id="@+id/whatday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:text="WHAT DAY ARE YOU ON?"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#000000" />

            <Spinner
                android:id="@+id/workoutlist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/whatday"
                android:layout_alignRight="@+id/whatday"
                android:layout_below="@+id/whatday"
                android:layout_marginTop="30dp" 
              
                 
                />
             
             <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/workoutlist"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="71dp"
            android:src="@drawable/next"     
            android:onClick="pictureAdd"
             android:adjustViewBounds="true"
        android:scaleType="fitStart"
            android:text="NEXT" />
            
        </RelativeLayout>

       
       
    </RelativeLayout>

    </ScrollView> 
